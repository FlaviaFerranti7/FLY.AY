<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_event_form">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titleAddEventLayout"
        android:textSize="16sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode ="true"
        app:endIconMode="custom">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/whichEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/title_add_event"
            android:textSize="16sp"
            android:layout_marginBottom="-8dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/category_add_event"
        android:textSize="16dp"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonCategories"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/studyCategoryButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_category_study"
            app:iconTint="@color/blueStudy"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/freeTimeCategoryButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_category_freetime"
            app:iconTint="@color/redFreeTime"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wellnessCategoryButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_category_wellness"
            app:iconTint="@color/violetWellness"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/festivityCategoryButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_category_festivity"
            app:iconTint="@color/orangeFestivity"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/financesCategoryButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_category_finances"
            app:iconTint="@color/yellowFinances"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/date_add_event"
        android:textSize="16dp"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="60dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

</RelativeLayout>