<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="?attr/actionBarSize">

    <PreferenceCategory
        app:title="Geleral">

        <EditTextPreference
            app:key="psw"
            app:title="Change password"
            app:useSimpleSummaryProvider="false" />

        <EditTextPreference
            app:key="email"
            app:title="Add Email"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Notification">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="day_plan"
            android:title="Plan of the day?" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="done"
            android:title="What have you done so far?" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="tomorrow_plan"
            android:title="Tomorrow plan" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="mark"
            android:title="Did you mark everything?" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Visualization mode">

        <SwitchPreferenceCompat
            app:key="light_dark_view"
            app:title="Dark mode" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Customize">

        <SwitchPreferenceCompat
            app:key="wake_up"
            app:title="Wake-up time" />

        <SwitchPreferenceCompat
            app:key="meal_time"
            app:title="Meal time" />

    </PreferenceCategory>

</PreferenceScreen>